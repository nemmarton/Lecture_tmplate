{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc-12 build active file",
            "type": "cppbuild",
            "command": "/usr/bin/gcc-12",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build C file with warnings and math library",
            "options": {
                "showOutput": "always"
            }
        }
    ]
}
