{
  "name": "C Development Environment",
  "image": "mcr.microsoft.com/devcontainers/cpp:debian",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "github.copilot.enable": {
          "*": false
        },
        "editor.tabSize": 4,
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-vscode.cpptools"
      ]
    }
  }
}
